# Terraform変数の例
# このファイルをコピーして terraform.tfvars を作成し、実際の値を設定してください
# terraform.tfvars は .gitignore に含まれているため、Gitにコミットされません

# Render API Key
# 取得方法: Render Dashboard → Account Settings → API Keys
render_api_key = "rnd_xxxxxxxxxxxxxxxxxxxxx"

# プロジェクト設定
project_name = "mjai"
repo         = "ryohei-emori/mjai"
branch       = "main"

# Render設定
render_region  = "oregon"
environment    = "production"
frontend_plan  = "starter"  # または "free"
backend_plan   = "starter"  # または "free"

# Supabase Database URL
# 形式: postgresql://postgres.PROJECT_REF:PASSWORD@aws-0-REGION.pooler.supabase.com:6543/postgres
database_url = "postgresql://postgres.fqyhrubqkpuyliqojbai:YOUR_PASSWORD@aws-0-ap-northeast-1.pooler.supabase.com:6543/postgres"

# Gemini API
# 取得方法: Google Cloud Console → APIs & Services → Credentials
gemini_api_key = "AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
gemini_model   = "gemini-2.5-flash"
